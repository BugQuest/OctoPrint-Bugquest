<form class="form-horizontal">
    <div class="control-group-header">
        <h3>Bugquest</h3>
    </div>
    <div class="control-group">
        <label class="control-label" for="color">Color</label>
        <div class="controls">
            <input type="color" class="input-block-level" data-bind="value: settings.plugins.bugquest.color">
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settings.plugins.bugquest.light">
                {{ _('Enable Light') }}
            </label>
        </div>
    </div>
</form>